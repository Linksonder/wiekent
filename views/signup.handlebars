<h5 class="card-title">Create a new account</h5>

{{#if message}}
<div class="alert alert-danger"> {{ message }} </div>
{{/if}}

<form method="POST">
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" name="email" value="linksonder@gmail.com" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" value="linksonder" class="form-control" id="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Signup</button>
</form>

<a href="/login">Already a member? Login with an existing account</a> 